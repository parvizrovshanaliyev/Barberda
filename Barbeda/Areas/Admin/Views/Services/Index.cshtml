@model  IEnumerable<Barbeda.Models.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <h2 class="m-b-10">Service</h2>
        <h3><a href="/Admin/Services/Create"> <b>+</b> Create NEW Service</a></h3>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table style="width:100%" class="table table-bordered table-striped member-hover dataTable" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>Service Name</th>
                        <th>Photo</th>
                        <th>Description</th>
                        <th>Service Price</th>
                        <th>Data-Filter</th>
                        <th colspan="3">Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Service Name</th>
                        <th>Photo</th>
                        <th>Description</th>
                        <th>Service Price</th>
                        <th>Data-Filter</th>
                        <th colspan="3">Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Name</td>
                        <td><img style="width:200px" src="~/Assets/img/@item.Image" class="img-fluid"></td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>@item.DataFilter</td>
                        <td>
                            <a href="/Admin/Services/Edit/@item.Id" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                        </td>
                        <td>
                            <a href="/Admin/Services/Delete/@item.Id" class="btn btn-warning"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @*<div class="card-footer small text-muted">@ViewBag.UpdateAt</div>*@
</div>


