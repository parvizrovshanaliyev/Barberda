@using Barbeda.Extensions;
@using Barbeda.Models;
@model  ServicePortfolio

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Delete</h2>

<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Service Name</label>
        @Html.TextBoxFor(s => Model.Service.Name, new { @class = "form-control ", @readonly = "true" })
    </div>
    <div class="form-group">
        <label>Current Image</label>
        <img src="~/Assets/img/@Model.Image" style="height:100px;object-fit:contain" class="form-control" alt="Alternate Text" />
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary form-control" value="Delete" />
    </div>
    <a href="~/Admin/ServicePortfolios/Index" class="btn btn-dark">Back to list</a>
</form>

