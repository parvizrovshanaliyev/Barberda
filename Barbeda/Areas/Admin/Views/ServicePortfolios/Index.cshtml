@model  IEnumerable<Barbeda.Models.ServicePortfolio>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <h2 class="m-b-10">Service Portfolios</h2>

        <h3><a class="@(Model.Count() == 8 ? "disabled" : " ") btn" href="/Admin/ServicePortfolios/Create"> <b>+</b>Add Image To Service</a></h3>

    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table style="width:100%" class="table table-bordered table-striped member-hover dataTable" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>Service Name</th>
                        <th>Service Photo</th>
                        <th colspan="3">Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Service Name</th>
                        <th>Service Photo</th>
                        <th colspan="3">Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr>
                            <td>@Model.ElementAt(i).Service.Name</td>

                            <td><img style="width:200px" src="~/Assets/img/@Model.ElementAt(i).Image" class="img-fluid"></td>
                            <td>
                                <a href="/Admin/ServicePortfolios/Edit/@Model.ElementAt(i).Id" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                            </td>
                            <td>
                                <a href="/Admin/ServicePortfolios/Delete/@Model.ElementAt(i).Id" class="btn btn-warning @(Model.Count()>8?" ":"disabled") "><i class="fas fa-trash-alt"></i></a>
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

