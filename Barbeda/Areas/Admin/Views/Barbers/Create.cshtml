
@model  Barbeda.Models.Barber
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}



<form enctype="multipart/form-data" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(s => s.Name)
        @Html.TextBoxFor(s => s.Name, new { @class = "form-control " })
        @Html.ValidationMessageFor(s => s.Name, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Surname)
        @Html.TextBoxFor(s => s.Surname, new { @class = "form-control " })
        @Html.ValidationMessageFor(s => s.Surname, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Description)
        @Html.TextBoxFor(s => s.Description, new { @class = "form-control " })
        @Html.ValidationMessageFor(s => s.Description, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Email)
        @Html.TextBoxFor(s => s.Email, new { @class = "form-control ", type = "email" })
        @Html.ValidationMessageFor(s => s.Email, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Tel)
        @Html.TextBoxFor(s => s.Tel, new { @class = "form-control " })
        @Html.ValidationMessageFor(s => s.Tel, null, new { @class = "text-danger" })
    </div>
    <div class="form-group ">
        @Html.LabelFor(t => t.Photo)
        @Html.TextBoxFor(t => t.Photo, new { @class = "form-control ", type = "file", accept = "image/*" })
        @Html.ValidationMessageFor(t => t.Photo, null, new { @class = "text-danger" })
    </div>
    <input type="submit" class="btn btn-primary" name="name" value="Create" />
    <a href="~/Admin/Barbers/Index" class="btn btn-dark">Back to list</a>
</form>

@section scripts{
    <script src="~/Assets/validate/jquery.validate.min.js"></script>
    <script src="~/Assets/validate/jquery.validate.unobtrusive.min.js"></script>
}

