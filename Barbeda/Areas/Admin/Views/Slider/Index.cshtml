@model  IEnumerable<Barbeda.Models.Slider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <h2>Slider</h2>
        <h3><a href="/Admin/Slider/Create"> <b>+</b> Create NEW Slide Item</a></h3>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table style="width:100%" class="table table-bordered table-striped member-hover dataTable" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>Slider Item Title</th>
                        <th>Slider Item Title</th>
                        <th>Slider Item Image</th>
                        <th colspan="3">Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Slider Item Title</th>
                        <th>Slider Item Title</th>
                        <th>Slider Item Image</th>
                        <th colspan="3">Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TitleOne</td>
                            <td>@item.TitleTwo</td>
                            <td><img style="width:200px" src="~/Assets/img/@item.Image" class="img-fluid"></td>
                            <td>
                                <a href="/Admin/Slider/Edit/@item.Id" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @*<div class="card-footer small text-muted">@ViewBag.UpdateAt</div>*@
</div>


